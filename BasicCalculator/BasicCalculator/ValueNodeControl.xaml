<UserControl x:Class="BasicCalculator.ValueNodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BasicCalculator"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100">
    <UserControl.Resources>
        <Style TargetType="Label" x:Key="valueLabelpart">
            <Setter Property="Padding" Value="0,5"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="4,0,4,0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Padding="1,5,0,0" Content="-"  x:Name="Negative" Visibility="Collapsed" />
        <Label Grid.Column="1" Padding="1,5,1,0" Content="€" x:Name="Valut" Visibility="Collapsed" />
        <Label Grid.Column="2" Padding="0,5,1,0"  x:Name="digits"/>
    </Grid>
</UserControl>
